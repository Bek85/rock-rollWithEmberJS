<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each this.model as |band|}}
      <li class="rr-list-item" data-test-rr="band-list-item">
        <LinkTo
          @route="bands.band"
          @model={{band.id}}
          class="rr-band-link"
          data-test-rr="band-link"
        >
          {{band.name}}
          <span class="rr-pointer">
            <FaIcon @icon="angle-right" />
          </span>
        </LinkTo>
      </li>
    {{/each}}
  </ul>
  <div class="rr-new-label">
    {{#if isAddingBand}}
      <form class="rr-inline-form" onsubmit={{action "saveBand"}}>
        <Input
          @type="text"
          class="rr-input"
          @value={{this.newBandName}}
          placeholder="New band"
          data-test-rr="new-band-input"
        />
        <button
          type="submit"
          class="rr-action-button"
          disabled={{isAddButtonDisabled}}
          data-test-rr="new-band-button"
        >
          Add
        </button>
        <button class="rr-cancel-icon" onclick={{action "cancelAddBand"}}>
          <FaIcon @icon="times" />
        </button>
      </form>
    {{else}}
      <label onclick={{action "addBand"}} data-test-rr="new-band-label">
        <FaIcon @icon="plus" />
        <span class="ml1">
          Add new band
        </span>
      </label>
    {{/if}}
  </div>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>